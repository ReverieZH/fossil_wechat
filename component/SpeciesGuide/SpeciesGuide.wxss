/* component/SpeciesGuide/SpeciesGuide.wxss */
.box{
    background-color: white;
    width: 700rpx;
    padding-top: 20rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border-radius: 13rpx;
    box-shadow: 0 10rpx 10rpx rgb(209, 209, 209);
    padding-bottom: 20rpx;
  }
  
  .location{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  
  .speciespicture{
    width:32%;
    display:flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    border-radius:10rpx;
    margin-top:15rpx;
  }
  
  .speciespicture .text{
    color: #999999;
    font-size: 28rpx;
  }
  
  .title{
    margin: 0 auto;
    font-size: 40rpx;
    color: #D1894E;
  }
  
  .image{
    height: 150rpx; 
    width: 150rpx; 
    border-radius: 13rpx;
    overflow: hidden;
  }

  
